<div class="card max-w-2xl mx-auto">
    <h1>Base 64 encoder and decoder</h1>

    <textarea rows="4" class="block rounded-t-lg px-2.5 py-2.5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-indigo-500 focus:outline-none focus:ring-0 focus:border-indigo-600 mt-2" placeholder="Content to convert" autocomplete="off" id="contentToConvert"></textarea>

    <select id="fromInput" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-500 focus:border-indigo-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 outline-none mt-4" onchange="convert()">
        <option value="Encode">Encode</option>
        <option value="Decode">Decode</option>
    </select>

    <textarea rows="4" class="block rounded-t-lg px-2.5 py-2.5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-indigo-500 focus:outline-none focus:ring-0 focus:border-indigo-600 mt-4" placeholder="Result" autocomplete="off" id="resultContent" readonly></textarea>
</div>

<script>
    const contentToConvertTextarea = document.querySelector("#contentToConvert");
    const resultContentTextarea = document.querySelector("#resultContent");
    const fromInput = document.querySelector("#fromInput");

    contentToConvertTextarea.addEventListener("keyup", convert);

    function convert() {
        if(fromInput.value == "Encode") resultContentTextarea.value = btoa(contentToConvertTextarea.value); else resultContentTextarea.value = atob(contentToConvertTextarea.value);
    }
</script>