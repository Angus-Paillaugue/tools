<div class="card max-w-2xl mx-auto">
    <h1>Multiple whitespace remover</h1>

    <textarea rows="4" class="block rounded-t-lg px-2.5 py-2.5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-indigo-500 focus:outline-none focus:ring-0 focus:border-indigo-600 mt-2" placeholder="Text to format" autocomplete="off" id="contentToFormat"></textarea>
    
    <textarea rows="4" class="block rounded-t-lg px-2.5 py-2.5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-indigo-500 focus:outline-none focus:ring-0 focus:border-indigo-600 mt-2" placeholder="Text to format" autocomplete="off" id="formattedResult" readonly></textarea>
</div>

<script>
    const contentToFormatTextarea = document.querySelector("#contentToFormat");
    const formattedResultTextarea = document.querySelector("#formattedResult");

    contentToFormatTextarea.addEventListener("keyup", format);

    function format() {
        formattedResultTextarea.value = contentToFormatTextarea.value.replace(/\s+/g, ' ').trim()
    }
</script>